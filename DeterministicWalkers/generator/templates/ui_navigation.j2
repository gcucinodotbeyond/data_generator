    {{ to_json({"text": "Fammi vedere altri treni", "variables": {}}) }}
    {{ to_json({"text": "Avanti", "variables": {}}) }}
    {{ to_json({"text": "Prossimi", "variables": {}}) }}
    {{ to_json({"text": "Ce ne sono altri?", "variables": {}}) }}
