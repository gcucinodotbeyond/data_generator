{%- else %}
    {{ to_json({"text": "Menu", "variables": {}}) }}
    {{ to_json({"text": "Torna al menu", "variables": {}}) }}
    {{ to_json({"text": "Aiuto", "variables": {}}) }}
{%- endif %}
